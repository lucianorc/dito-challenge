<div>
  <h2 class="text-center">Dito Challenge</h2>
</div>
<div class="col-md-6 col-md-offset-3">
  <p id="notice"><%= notice %></p>
  <h2>Score</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Uid</th>
        <th>Username</th>
        <th>Points</th>
      </tr>
    </thead>

    <tbody>
      <% @scores.each do |score| %>
        <tr>
          <th class="row"><%= score.uid %></th>
          <td><%= score.username %></td>
          <td><%= score.points %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
